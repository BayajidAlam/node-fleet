{
  "title": "Node-Fleet Autoscaler Overview",
  "tags": [
    "kubernetes",
    "autoscaler",
    "node-fleet"
  ],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "Cluster Node Count",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "count(kube_node_info)",
          "legendFormat": "Total Nodes",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Nodes"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 2,
      "title": "CPU Usage (%)",
      "type": "graph",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "avg(rate(node_cpu_seconds_total{mode!=\"idle\"}[5m])) * 100",
          "legendFormat": "CPU Usage",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "CPU %",
          "max": 100,
          "min": 0
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 3,
      "title": "Memory Usage (%)",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "(1 - avg(node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "Memory Usage",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "Memory %",
          "max": 100,
          "min": 0
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 4,
      "title": "Pending Pods",
      "type": "graph",
      "gridPos": {
        "x": 12,
        "y": 8,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "sum(kube_pod_status_phase{phase=\"Pending\"})",
          "legendFormat": "Pending Pods",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Pods"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 5,
      "title": "Scaling Events",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 16,
        "w": 24,
        "h": 6
      },
      "targets": [
        {
          "expr": "rate(autoscaler_scale_up_total[5m])",
          "legendFormat": "Scale Up",
          "refId": "A"
        },
        {
          "expr": "rate(autoscaler_scale_down_total[5m])",
          "legendFormat": "Scale Down",
          "refId": "B"
        }
      ]
    },
    {
      "id": 6,
      "title": "Node Status",
      "type": "table",
      "gridPos": {
        "x": 0,
        "y": 22,
        "w": 24,
        "h": 8
      },
      "targets": [
        {
          "expr": "kube_node_info",
          "format": "table",
          "refId": "A"
        }
      ],
      "styles": [
        {
          "pattern": "node",
          "type": "string",
          "alias": "Node Name"
        },
        {
          "pattern": "instance",
          "type": "string",
          "alias": "Instance"
        }
      ]
    }
  ]
}
